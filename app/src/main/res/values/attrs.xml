<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 开关属性 -->
    <declare-styleable name="SwitcherView">
        <attr name="switcher_text_size" format="dimension" />
        <attr name="switcher_bg_color" format="color" />
        <attr name="switcher_fg_color" format="color" />
        <attr name="switcher_border_color" format="color" />
        <attr name="switcher_border_width" format="dimension" />
        <attr name="switcher_text_color_default" format="color" />
        <attr name="switcher_text_color_selected" format="color" />
        <attr name="switcher_left_text" format="string" />
        <attr name="switcher_right_text" format="string" />
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <attr name="color_track_text" format="string" />
        <attr name="color_track_text_size" format="dimension" />
        <attr name="color_track_origin_text_color" format="color" />
        <attr name="color_track_changed_text_color" format="color" />
        <attr name="color_track_change_progress" format="fraction" />
        <attr name="color_track_change_direction">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>