<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.jerry.android.uimotion.textview.ColorTrackTextView
        android:id="@+id/tv_color_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:color_track_change_direction="bottom"
        app:color_track_text="同就开始金融卡解开了同"
        app:color_track_text_size="20sp" />

    <SeekBar
        android:id="@+id/sb_changed_progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="100" />

    <TextView
        android:id="@+id/tv_changed_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%" />

</LinearLayout>